# Cygwin/Windows specific Make directives.

# Declare tools.
SHELL = /bin/sh

CC = gcc
LD = gcc
INSTALL = install
RM = rm
CP = cp
MKDIR = mkdir
SHA1SUM = sha1sum
ECHO = @echo -e
CAT = cat
ZIP = zip

PREFIX ?= /usr/local

#RULES +=

EXT =.exe

# Select debugging or optimized compiler flags.
ifeq ($(DEBUGGING), true)
RESCFLAGS += -DDEBUGGING
endif

# Mingw specific compiler flags.
CFLAGS += -static -static-libgcc -D__WIN32__ -mms-bitfields -mconsole

# Mingw specific linker flags.
LDFLAGS	+= -static -static-libgcc -L/usr/lib/w32api -lintl -lkernel32 -mms-bitfields -mconsole

